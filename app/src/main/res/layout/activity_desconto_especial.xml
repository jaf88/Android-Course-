<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="donaxica.joaquimalves.com.br.xicavendas.DescontoEspecialActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informe o Valor da Roupa"
        android:id="@+id/text_valor_roupa_especial"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/valor_preco_especial"
        android:layout_alignEnd="@+id/valor_preco_especial" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/valor_preco_especial"
        android:layout_below="@+id/text_valor_roupa_especial"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informe sua Idade"
        android:id="@+id/text_idade"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText_idade"
        android:layout_below="@+id/text_idade"
        android:layout_alignLeft="@+id/valor_preco_especial"
        android:layout_alignStart="@+id/valor_preco_especial"
        android:layout_marginTop="42dp" />

    <Button
        android:id="@+id/button_calc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:background="#5dc7c1"
        android:text="Calcular Desconto Especial"
        android:layout_below="@+id/editText_idade"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="47dp"
        android:onClick="calcularDescontoEspecial" />


</RelativeLayout>
